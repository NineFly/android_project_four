<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadingView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:visibility="invisible"
    >
<!--    <com.ruaho.cochat.widget.CircleProgressView
        android:id="@+id/loadingView_loading"
        android:layout_width="140dp"
        android:layout_height="140dp"/>-->
    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/loadingView_loading"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#fff"
        app:cpv_circle_width="70dp"
        app:cpv_background_circle_width="70dp"
        app:cpv_background_circle_color="@color/transparent"
        app:cpv_text_prefix="%"
        app:cpv_text_size="20"
        app:cpv_text_color="#27375c"
        />

    <TextView
        android:id="@+id/loadingView_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载失败"
        android:textColor="#fff"
        android:visibility="invisible" />
</LinearLayout>